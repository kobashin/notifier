<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- アプリタイトル -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="通知リスナー"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"
        android:textColor="@android:color/black" />

    <!-- 権限状態表示 -->
    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="❌ 通知アクセス許可: 無効"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/holo_red_dark" />

    <!-- 許可設定ボタン -->
    <Button
        android:id="@+id/permissionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="許可を有効にする"
        android:layout_marginBottom="32dp"
        android:padding="12dp" />

    <!-- 通知カウント表示 -->
    <TextView
        android:id="@+id/notificationCountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="検出した通知数: 0"
        android:textSize="14sp"
        android:layout_marginBottom="24dp"
        android:textColor="@android:color/darker_gray" />

    <!-- 説明テキスト -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="このアプリは通知を監視してLEDコントロールシステムに送信します。\n\n設定手順:\n1. 上のボタンを押して設定画面を開く\n2. 「NotificationListener」を見つける\n3. スイッチをONにして許可する"
        android:textSize="12sp"
        android:lineSpacingExtra="4dp"
        android:textColor="@android:color/darker_gray"
        android:background="@android:color/transparent"
        android:padding="16dp" />

</LinearLayout>